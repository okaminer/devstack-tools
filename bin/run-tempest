#!/bin/bash
#
# This script simply runs tox, assuming a few things in the environment
#   CINDER_REPO   (repo to pull cinder from)
#   CINDER_BRANCH (branch of cinder to pull)

# set the directory where the code is
DIRECTORY="/opt/stack/tempest"

if [ ! -d "${DIRECTORY}" ]; then
   echo "The tempest directory does not seem to exist!"
   exit 1
fi

# cd to the directory
cd "${DIRECTORY}"

# run tempest
tox -eall -- '^(?=.*volume)(?!.*extend)(?!.*test_stamp_pattern).*' --concurrency=1
